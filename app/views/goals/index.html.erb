<div class="wrapper">
  <%= render 'shared/header' %>
  <main class="wrap">
    <div class="side-bar">
      <div class="side-bar-header">
        <h2>タグ一覧</h2>
      </div>
      <div class="tags-list">
        <div class="tag">
          <p class="tag-text">Private</p>
        </div>
        <div class="tag">
          <p class="tag-text">Work</p>
        </div>
      </div>
    </div>
    <div class="main-contents">
      <div class="main-header">
        <h2>目標一覧</h2>
      </div>
      <ul class="goals-list">
        <% @goals.each do |goal| %>
          <li class="goal-box">
            <div class="goal-top-box">
              <div class="goal-tag">
                <p class="goal-tag-text">
                  <%= goal.tag.name %>
                </p>
              </div>
              <div class="goal-date">
                <p class="goal-date-text">
                  <%= l goal.created_at %>
                </p>
              </div>
            </div>
            <div class="goal-bottom-box">
              <div class="goal-title">
                <%= link_to goal.title, goal_logs_path(goal), class: 'goal-title-text' %>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </main>
  <%= render 'shared/footer' %>
</div>
